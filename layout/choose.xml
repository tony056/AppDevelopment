<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="選擇球衣顏色"
        android:textSize="20dp" 
        android:layout_marginTop="5dp"/>

	 <RadioGroup android:id="@+id/choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/chooseblue"
        android:orientation="horizontal">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
	<TableRow android:layout_width="wrap_content"
	    android:layout_height="wrap_content">    
	    
		<RadioButton
            android:id="@+id/chooseblue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLUE" />
	</TableRow>
	<TableRow>
	    <ImageView android:id="@+id/blook"
            android:src="@drawable/blue"
            android:background="#00000000"
            android:layout_margin="2dp"/>
	</TableRow>
	</TableLayout>
	
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
	<TableRow android:layout_width="wrap_content"
	    android:layout_height="wrap_content">    
	    
		<RadioButton
            android:id="@+id/choosered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RED" />
	</TableRow>
	<TableRow>
	    <ImageView android:id="@+id/rlook"
            android:src="@drawable/red2"
            android:background="#00000000"
            android:layout_margin="2dp"/>
	</TableRow>
	</TableLayout>
	
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
	<TableRow android:layout_width="wrap_content"
	    android:layout_height="wrap_content">    
	    
		<RadioButton
            android:id="@+id/choosegreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GREEN" />
	</TableRow>
	<TableRow>
	    <ImageView android:id="@+id/glook"
            android:src="@drawable/green2"
            android:background="#00000000"
            android:layout_margin="2dp"/>
	</TableRow>
	</TableLayout>
	
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
	<TableRow android:layout_width="wrap_content"
	    android:layout_height="wrap_content">    
	    
		<RadioButton
            android:id="@+id/chooseblack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLACK" />
	</TableRow>
	<TableRow>
	    <ImageView android:id="@+id/blalook"
            android:src="@drawable/black"
            android:background="#00000000"
            android:layout_margin="2dp"/>
	</TableRow>
	</TableLayout>
	
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
	<TableRow android:layout_width="wrap_content"
	    android:layout_height="wrap_content">    
	    
		<RadioButton
            android:id="@+id/chooseorange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORANGE" />
	</TableRow>
	<TableRow>
	    <ImageButton android:id="@+id/olook"
            android:src="@drawable/orange"
            android:background="#00000000"
            android:layout_margin="2dp"/>
	</TableRow>
	</TableLayout>
	</RadioGroup>
    

</LinearLayout>