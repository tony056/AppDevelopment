<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView 
            android:id="@+id/Playerinfo"
            android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    
		    
		    android:textSize="32dp"
		    android:text="8 童盈超"/>

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:background="#00000000"
             android:src="@drawable/green"
            android:onClick="bfuncDelete"/>

    </LinearLayout>
    
    <TableLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <TableRow 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content">
            <TableLayout 
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content">
                <TableRow 
                    android:layout_width="wrap_content"
        			android:layout_height="wrap_content">
                    <Button 
                        android:id="@+id/btnTwopIn"
                        android:onClick="bfuncTwopIn"
                        android:text="O"/>
                </TableRow>
                <TableRow 
                    android:layout_width="wrap_content"
        			android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/Twop"
                        android:gravity="center"
                        android:text="兩分球"/>
                </TableRow>
                <TableRow 
                    android:layout_width="wrap_content"
        			android:layout_height="wrap_content">
                    <Button 
                        android:id="@+id/btnTwopOut"
                        android:onClick="bfuncTwopOut"
                        android:text="X"/>
                </TableRow>
                
            </TableLayout>
            <TableLayout 
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content">
                <TableRow 
                    android:layout_width="wrap_content"
        			android:layout_height="wrap_content">
                    <Button 
                        android:id="@+id/btnThreepIn"
                        android:onClick="bfuncThreepIn"
                        android:text="O"/>
                </TableRow>
                <TableRow 
                    android:layout_width="wrap_content"
        			android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/Threep"
                        android:gravity="center"
                        android:text="三分球"/>
                </TableRow>
                <TableRow 
                    android:layout_width="wrap_content"
        			android:layout_height="wrap_content">
                    <Button 
                        android:id="@+id/btnThreepOut"
                        android:onClick="bfuncThreepOut"
                        android:text="X"/>
                </TableRow>
                
            </TableLayout>
            <TableLayout 
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content">
                <TableRow 
                    android:layout_width="wrap_content"
        			android:layout_height="wrap_content">
                    <Button 
                        android:id="@+id/btnFreethrowIn"
                        android:onClick="bfuncFreethrowIn"
                        android:text="O"/>
                </TableRow>
                <TableRow 
                    android:layout_width="wrap_content"
        			android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/Freethrow"
                        android:gravity="center"
                        android:text="罰球"/>
                </TableRow>
                <TableRow 
                    android:layout_width="wrap_content"
        			android:layout_height="wrap_content">
                    <Button 
                        android:id="@+id/btnFreethrowOut"
                        android:onClick="bfuncFreethrowOut"
                        android:text="X"/>
                </TableRow>
                
            </TableLayout>
            <Button 
                android:id="@+id/btnReb"
                android:text="籃板球"
                android:onClick="bfuncReb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
             <Button 
                android:id="@+id/btnAst"
                android:text="助攻"
                android:onClick="bfuncAst"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </TableRow>
        
        <TableRow 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
             <Button 
                android:id="@+id/btnStl"
                android:text="抄截"
                android:onClick="bfuncStl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
             <Button 
                android:id="@+id/btnBlk"
                android:text="阻攻"
                android:onClick="bfuncBlk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
             <Button 
                android:id="@+id/btnTo"
                android:text="失誤"
                android:onClick="bfuncTo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
             <Button 
                android:id="@+id/btnFoul"
                android:text="犯規"
                android:onClick="bfuncFoul"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </TableRow>
    </TableLayout>

</LinearLayout>